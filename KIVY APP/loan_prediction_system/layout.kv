                        size_hint_y:None
                        height:self.texture_size[1]     


                    MDRectangleFlatButton:
                        text:""
                        id:id_decision_tree
                        size_hint_y:None
                        # height:self.texture_size[1]

                MDCard:
                    orientation:'horizontal'
                    spacing:10
                    MDLabel:
                        text:"KNN MACHINE "
                        size_hint_y:None
                        height:self.texture_size[1]     


                    MDRectangleFlatButton:
                        text:""
                        id:id_knn
                        size_hint_y:None
                        # height:self.texture_size[1]

                MDCard:
                    orientation:'horizontal'
                    spacing:10
                    MDLabel:
