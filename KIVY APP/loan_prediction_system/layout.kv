                    MDRectangleFlatButton:
                        text:""
                        id:id_naive_bayes
                        size_hint_y:None
                        # height:self.texture_size[1]
                MDLabel:
                    text:"==============AGGREGATE============== "
                    size_hint_y:None
                    halign:'center'
                    height:self.texture_size[1]     

                MDCard:
                    orientation:'horizontal'
                    spacing:5
                    MDLabel:
                        text:"FINAL PREDICTION:LOAN APPROVED? "
                        size_hint_y:None
                        height:self.texture_size[1]     


                    MDRectangleFlatButton:
                        text:""
                        id:id_final_decission
                        size_hint_y:None
                
                MDCard:
                    orientation:'horizontal'
                    spacing:10
                    
                    MDRectangleFlatButton:
                        text:"PREDICT"
                        id:id_final_decesion
                        size_hint:None,None
                        width:100
                        on_press:app.prediction_box()
                    
                    MDRectangleFlatButton:
                        text:"CLEAR"
                        id:id_final_decesion
                        size_hint:None,None
                        width:100
                        on_press:app.prediction_box()
                